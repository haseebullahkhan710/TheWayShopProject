<!-- Start All Title Box -->
<div class="all-title-box" style="background-color: #000; color: #FF0000;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2><strong>Feedback</strong></h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#"><strong>Home</strong></a></li>
                    <li class="breadcrumb-item"><a href="about.html"><strong>About Us</strong></a></li>
                    <li class="breadcrumb-item active"><strong>Feedback</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End All Title Box -->
<!-- Start Feedback Form -->
<br />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h3><strong>Your Feedback</strong></h3>
            <form action="#" method="post">
                <div class="form-group">
                    <label for="name"><strong>Name:</strong></label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="email"><strong>Email:</strong></label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="message"><strong>Message:</strong></label>
                    <textarea class="form-control" rows="5" id="message" name="message" required></textarea>
                </div>
                <button type="submit" class="btn btn-danger"><strong>Submit Feedback</strong></button>
            </form>
        </div>
    </div>
</div>
<!-- End Feedback Form -->
