            @Html.EditorFor(model => model.PRODUCT_SALEPRICE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PRODUCT_SALEPRICE, "", new { @class = "text-danger" })
        </div>
    </div>

