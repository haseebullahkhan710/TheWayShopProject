            @Html.EditorFor(model => model.PRODUCT_DECRIPTION, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PRODUCT_DECRIPTION, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PRODUCT_PURCHASEPRICE, htmlAttributes: new { @class = "control-label col-md-2" })
