            <input type="file" name="PRO_PIC" />
            <img height="50PX" width="50PX" src="@Url.Content(Model.PRODUCT_PICTURE)" alt="PRODUCT PICTURE" />
            @Html.EditorFor(model => model.PRODUCT_PICTURE, new { htmlAttributes = new { @class = "form-control" } })
