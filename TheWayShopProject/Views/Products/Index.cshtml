@model IEnumerable<TheWayShopProject.Models.Product>

@{
    ViewBag.Title = "Products";
}


<h2>Product List</h2>

<div class="mb-5">
    @Html.ActionLink("Add New Product", "Create", null, new { @class = "btn btn-danger btn-lg" })
</div>

<br />

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    PRODUCT PICTURE
                </th>
                <th>
                    PRODUCT NAME
                </th>
                <th>
                    PRODUCT DESCRIPTION
                </th>
                <th>
                    PRODUCT PURCHASE PRICE
                </th>
                <th>
                    PRODUCT SALE PRICE
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img height="100PX" width="100PX" src="@Url.Content(item.PRODUCT_PICTURE)" alt="Item Picture" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PRODUCT_NAME)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PRODUCT_DECRIPTION)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PRODUCT_PURCHASEPRICE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PRODUCT_SALEPRICE)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PRODUCT_ID }, new { @class = "btn btn-warning" })
                        <i class="fa fa-edit"></i> | <!-- Edit icon -->

                        @Html.ActionLink("Details", "Details", new { id = item.PRODUCT_ID }, new { @class = "btn btn-info" })
                        <i class="fa fa-info-circle"></i> | <!-- Details icon -->

                        @Html.ActionLink("Delete", "Delete", new { id = item.PRODUCT_ID }, new { @class = "btn btn-danger" })
                        <i class="fa fa-trash"></i> <!-- Delete icon -->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
